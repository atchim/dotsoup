#
# Keyboard
#

# Set brazilian keyboard layout.
super + space ; k ; b
  setxkbmap -model abnt2 -layout br

# Set north american keyboard layout.
super + space ; k ; u
  setxkbmap -layout us

#
# Launchers
#

# Launch calculator.
super + space ; equal
  = --dmenu=rofi

# Launch terminal.
super + Return
  alacritty

# Launch mixer.
super + space ; m
  alacritty --class floating -e alsamixer -g

# Launch music player.
super + space ; p
  alacritty --class floating -e ncmpcpp

# Launch process manager.
super + space ; t
  alacritty --class floating -e bpytop

# Launch file manager.
super + space ; slash
  alacritty --class floating -e lf

# Launch program launcher.
super + space ; space
  rofi -show run -theme dmenu

#
# Misc
#

# Reload sxhkd.
super + r ; s
  pkill -USR1 --exact sxhkd

#
# Screenshot
#

# Take a screenshot and copy it to clipboard.
super + space ; s ; c
  maim --window=$(xdotool getactivewindow) \
  | xclip -selection clipboard -target image/png

# Take a screenshot from selection / take a normal screenshot.
super + space ; s ; {shift + s,s}
  maim {--select,_} $SCREENSHOT_DIR/$(date +%s).png
