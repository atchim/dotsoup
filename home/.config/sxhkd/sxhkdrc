#
# Basic
#

# Launch program launcher.
super + space ; space
  rofi -show run -theme dmenu

# Reload sxhkd.
super + space ; r ; s
  pkill -USR1 --exact sxhkd

# Launch terminal.
super + Return
  alacritty

#
# Launchers
#

# Launch file manager.
super + space ; slash
  alacritty --class floating -e lf

# Launch calculator.
super + space ; equal
  = --dmenu=rofi

# Launch mixer.
super + space ; m
  alacritty --class floating -e alsamixer -g

# Launch music player.
super + space ; p
  alacritty --class floating -e ncmpcpp

# Launch process manager.
super + space ; t
  alacritty --class floating -e bpytop

#
# Screenshot
#

# Take a screenshot and copy it to clipboard.
super + space ; s ; c
  maim --window=(xdotool getactivewindow) \
  | xclip -selection clipboard -target image/png

# Take a screenshot from selection / take a normal screenshot.
super + space ; s ; {shift + s,s}
  maim {--select,_} $SCREENSHOT_PATH/(date +%s).png
